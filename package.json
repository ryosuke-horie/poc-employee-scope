{
  "name": "poc-employee-scope",
  "version": "1.0.0",
  "description": "企業従業員数自動取得PoC",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "start": "node dist/index.js",
    "start:extended": "node dist/index_extended.js",
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "dev:extended": "tsx src/index_extended.ts",
    "clean": "rimraf dist",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "poc": "npm run build && node dist/index_extended.js"
  },
  "keywords": [
    "scraping",
    "employee-count",
    "poc",
    "llm"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^11.5.0",
    "cheerio": "^1.0.0",
    "csv-parse": "^5.6.0",
    "csv-stringify": "^6.5.2",
    "dotenv": "^16.4.7",
    "openai": "^4.77.0",
    "playwright": "^1.49.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}