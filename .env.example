# OpenRouter設定（必須）
# APIキーの取得: https://openrouter.ai/keys
# 形式: sk-or-v1-で始まる64文字の文字列
OPENROUTER_API_KEY=sk-or-v1-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENROUTER_MODEL_ID=meta-llama/llama-3.1-8b-instruct

# 実行設定
MAX_CONCURRENT_REQUESTS=3
REQUEST_TIMEOUT_MS=30000
RETRY_COUNT=3

# Playwright設定
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36
NAV_WAIT_MS=2000

# データベース設定
DB_PATH=./data/companies.db

# 出力設定
OUTPUT_DIR=./output
LOG_LEVEL=info

# コスト最適化設定
MAX_TEXT_LENGTH_FOR_LLM=10000
PREFER_REGEX_OVER_LLM=true
SKIP_LOW_PRIORITY_URLS=false
MAX_URLS_PER_COMPANY=5

# 抽出設定
SNIPPET_CONTEXT_CHARS=200